doctype html
html lang="en-us"
  head
    / frontend_toolkit/head includes default html head tags and csrf_meta_tags
    = render 'frontend_toolkit/head', title: 'Language Placement'
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag "wide-header", media: "all"
